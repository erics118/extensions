{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "notes",
  "title": "Notes",
  "description": "Notes extension for Raycast",
  "icon": "notes-icon.png",
  "author": "erics118",
  "categories": [
    "Productivity",
    "Other"
  ],
  "keywords": [
    "note",
    "card"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "view-all",
      "title": "View All Notes",
      "description": "Display list of all saved notes",
      "mode": "view"
    },
    {
      "name": "create",
      "title": "Create Note",
      "description": "Create new note",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "name": "dataPath",
      "title": "Notes Storage Path",
      "type": "directory",
      "required": true,
      "description": "Folder to save notes"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.63.0",
    "@raycast/utils": "^1.10.1"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^1.0.8",
    "@types/node": "^20.10.4",
    "@types/react": "18.2.43",
    "eslint": "^8.55.0",
    "prettier": "^3.1.0",
    "typescript": "^5.3.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  }
}
