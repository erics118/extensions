{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "deepcast",
  "title": "Deepcast",
  "description": "Translate words, or entire sentences, into 27 different languages using DeepL.",
  "icon": "icon.png",
  "keywords": [
    "deepl",
    "translate"
  ],
  "author": "mooxl",
  "contributors": [
    "peter-gy",
    "popalay",
    "MonsterDeveloper",
    "Yamen",
    "EvanZhouDev",
    "erics118"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "index",
      "title": "Translate",
      "subtitle": "Deepcast",
      "description": "Translate text using DeepL",
      "mode": "view"
    },
    {
      "name": "spanish",
      "title": "Translate Into Spanish",
      "subtitle": "Deepcast",
      "description": "Translate text into Spanish using DeepL",
      "mode": "no-view",
      "arguments": [
        {
          "name": "text",
          "type": "text",
          "required": false,
          "placeholder": "Text"
        }
      ]
    }
  ],
  "preferences": [
    {
      "description": "Your DeepL API key",
      "name": "key",
      "placeholder": "Enter your DeepL API key",
      "required": true,
      "title": "API key",
      "type": "password"
    },
    {
      "name": "defaultTargetLanguage",
      "type": "dropdown",
      "title": "Default Target Language",
      "description": "Choose a default target language.",
      "required": true,
      "data": [
        {
          "title": "Arabic",
          "value": "AR"
        },
        {
          "title": "Bulgarian",
          "value": "BG"
        },
        {
          "title": "Czech",
          "value": "CS"
        },
        {
          "title": "Danish",
          "value": "DA"
        },
        {
          "title": "German",
          "value": "DE"
        },
        {
          "title": "Greek",
          "value": "EL"
        },
        {
          "title": "English (British)",
          "value": "EN-GB"
        },
        {
          "title": "English (American)",
          "value": "EN-US"
        },
        {
          "title": "Spanish",
          "value": "ES"
        },
        {
          "title": "Estonian",
          "value": "ET"
        },
        {
          "title": "Finnish",
          "value": "FI"
        },
        {
          "title": "French",
          "value": "FR"
        },
        {
          "title": "Hungarian",
          "value": "HU"
        },
        {
          "title": "Indonesian",
          "value": "ID"
        },
        {
          "title": "Italian",
          "value": "IT"
        },
        {
          "title": "Japanese",
          "value": "JA"
        },
        {
          "title": "Korean",
          "value": "KO"
        },
        {
          "title": "Lithuanian",
          "value": "LT"
        },
        {
          "title": "Latvian",
          "value": "LV"
        },
        {
          "title": "Norwegian (Bokm√•l)",
          "value": "NB"
        },
        {
          "title": "Dutch",
          "value": "NL"
        },
        {
          "title": "Polish",
          "value": "PL"
        },
        {
          "title": "Portuguese (Brazilian)",
          "value": "PT-BR"
        },
        {
          "title": "Portuguese",
          "value": "PT-PT"
        },
        {
          "title": "Romanian",
          "value": "RO"
        },
        {
          "title": "Russian",
          "value": "RU"
        },
        {
          "title": "Slovak",
          "value": "SK"
        },
        {
          "title": "Slovenian",
          "value": "SL"
        },
        {
          "title": "Swedish",
          "value": "SV"
        },
        {
          "title": "Turkish",
          "value": "TR"
        },
        {
          "title": "Ukrainian",
          "value": "UK"
        },
        {
          "title": "Chinese (simplified)",
          "value": "ZH"
        }
      ],
      "default": "EN-US"
    },
    {
      "name": "source",
      "type": "dropdown",
      "title": "Preferred Source",
      "description": "Choose a preferred text source. If no text is selected, clipboard is used.",
      "data": [
        {
          "title": "Selected",
          "value": "selected"
        },
        {
          "title": "Clipboard",
          "value": "clipboard"
        }
      ],
      "default": "selected",
      "required": false
    },
    {
      "description": "Action on Translation",
      "name": "onTranslateAction",
      "required": false,
      "title": "On Translation Action",
      "type": "dropdown",
      "data": [
        {
          "title": "Copy to Clipboard",
          "value": "clipboard"
        },
        {
          "title": "View in Raycast",
          "value": "view"
        },
        {
          "title": "Paste in Frontmost App",
          "value": "paste"
        }
      ]
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.61.1",
    "@sindresorhus/transliterate": "^1.6.0",
    "@types/got": "^9.6.12",
    "got": "^11.8.2",
    "http-status-codes": "^2.3.0"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^1.0.8",
    "@types/node": "18.18.4",
    "@types/react": "18.2.36",
    "eslint": "^8.53.0",
    "prettier": "^3.0.3",
    "typescript": "^5.2.2"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  }
}
