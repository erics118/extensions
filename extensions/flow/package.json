{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "flow",
  "title": "Flow Timer",
  "description": "Control Flow application timer",
  "icon": "flow.png",
  "author": "vimtor",
  "contributors": [
    "erics118"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "start-timer",
      "title": "Start Timer",
      "subtitle": "Flow",
      "description": "Resume current timer",
      "keywords": [
        "start",
        "play"
      ],
      "mode": "no-view"
    },
    {
      "name": "pause-timer",
      "title": "Pause Timer",
      "subtitle": "Flow",
      "description": "Pause current timer",
      "keywords": [
        "stop"
      ],
      "mode": "no-view"
    },
    {
      "name": "skip-session",
      "title": "Skip Session",
      "subtitle": "Flow",
      "description": "Skip current session",
      "mode": "no-view"
    },
    {
      "name": "start-next-break",
      "title": "Start Next Break",
      "subtitle": "Flow",
      "description": "Start the next break",
      "mode": "no-view"
    },
    {
      "name": "hide-timer",
      "title": "Hide Timer",
      "subtitle": "Flow",
      "description": "Hide visible timer",
      "mode": "no-view"
    },
    {
      "name": "show-timer",
      "title": "Show Timer",
      "subtitle": "Flow",
      "description": "Show current timer",
      "mode": "no-view"
    },
    {
      "name": "reset-timer",
      "title": "Reset Timer",
      "subtitle": "Flow",
      "description": "Reset current timer",
      "keywords": [
        "reset",
        "restart"
      ],
      "mode": "no-view"
    },
    {
      "name": "quit-flow",
      "title": "Quit Flow",
      "description": "Quit Flow application",
      "mode": "no-view"
    },
    {
      "name": "start-next-focus",
      "title": "Start Next Focus",
      "subtitle": "Flow",
      "description": "Start the next focus session",
      "mode": "no-view"
    }
  ],
  "categories": [
    "Applications",
    "Productivity"
  ],
  "dependencies": {
    "@raycast/api": "^1.59.0",
    "@raycast/utils": "^1.10.0"
  },
  "devDependencies": {
    "@raycast/eslint-config": "1.0.5",
    "@types/node": "18.8.3",
    "@types/react": "18.0.9",
    "eslint": "^7.32.0",
    "prettier": "^2.5.1",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  }
}
